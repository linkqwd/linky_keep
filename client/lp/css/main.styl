/* GENERAL CLASSES*/
.button 
	background-color: #ffbb42;
	border-radius: 2px;
	color white
	align-self center
	cursor pointer

body
	margin 0 auto

.flex-container
	display flex
	margin auto
	justify-content: space-between
	align-items center;
	padding 1% 1% 2% 1%
	max-width 1200px

.b-nav 
	&__item
		display inline-block
		padding 10px 14px 10px 14px
		
.nav__item_active
	background-color: #ffbb42;
	border-radius: 2px;
	
.b-nav__item:hover
	background-color #FFDA69
	border-radius: 2px;

@media all and (max-width: 750px)
	.flex-container
		flex-direction: column;
	.b-nav 
		text-align center
		
.b-head 
	margin-top 5%
	&__h1
		color white
		text-transform: uppercase
		font-family: Gotham;
		font-size: 30px;
		padding 5px 0 5px 0
	&__p
		color white
		font-family: OpenSans;
		font-size: 16px;

.flex-container-2-wrapper
	background-color: #709dca;
	height 540px
	position relative
	margin-bottom 150px
	
.b-slider
	position relative
	height 400px
	margin 58px 4px 0 4px
	text-align center
	
.b-slider__pc 
	position relative
	width: 647px;
	max-height: 343px;
	max-width 100%

.b-slider__screen
	position absolute
	max-width 100%
	margin auto
	top 17px
	right 0
	left 4px
	padding 0 15.8% 0 15.8%
	
.b-slider__scroll
	text-align center
	li
		display inline-block
		width 15px
		height 15px
		vertical-align middle
		margin 10px 5px 0 0
	a
		display block
		width 11px
		height 11px
	&_active
		border: 2px solid #1ca8dd
		border-radius 50%
	&_common
		border: 2px solid #dedfe0;
		border-radius 50%
	
.flex-container-2
	max-width 1100px
	display flex
	flex-wrap: wrap;
	justify-content: center
	margin auto
	text-align center
	

@media (max-width: 580px)
	.b-slider__screen
		top 14px
	div.flex-container-2-wrapper
		margin-bottom 225px
	.b-world-map-contacts .b-world-map-contacts__address
		background-size 220px 220px
		
@media (max-width: 480px)
	.b-slider__screen
		top 12px
		left 2px
	div.flex-container-2-wrapper
		margin-bottom 190px
		
@media (max-width: 390px)
	.b-slider__screen
		top 9px
		left 1px
	div.flex-container-2-wrapper
		margin-bottom 150px
		

.b-inputs
	display flex
	flex-wrap: wrap;
	justify-content center
	flex-basis: 100%
	margin-top 2%
	&__input
		margin 10px
		line-height 30px
		flex-grow 1;
		border 1px solid white
		border-radius: 2px 1px 1px 2px;
		padding-left 35px;
	&__button
		flex-basis: 200px;
		margin 10px
		line-height 40px

.b-inputs__input_name
	background url(../images/name.png) no-repeat center left 10px, white
	
.b-inputs__input_email
	background url(../images/email.png) no-repeat center left 10px, white
	
.b-inputs__input_phone
	background url(../images/phone.png) no-repeat center left 10px, white
	
@media (max-width: 698px)
	.b-inputs__button
		flex-basis: 100%
	.button_main-mod-pos
		max-width 400px
	.b-inputs__input
		flex-basis: 100%
	.flex-container-2-wrapper
		margin-bottom 250px

.b-our-services
	max-width 1200px
	text-align center
	margin 0 auto
	margin-bottom 4%
	&__h1
		color: #394b50;
		font-family: Gotham;
		font-weight: 900;
	&__p
		font-family: OpenSans;
		font-size: 16px;
		
.b-work-service 
	display flex
	flex-flow wrap
	max-width 1100px
	justify-content center
	margin auto
	margin-bottom 5%
	&-items
		flex-basis 400px
		padding-left 75px
		margin 20px
		flex-grow 1
		&__h3
			font-family: Lato;
			text-transform: uppercase;
			margin-bottom 10px
			font-size: 16px;
			color: #394b50;
		&__p
			color: #7b7b7b;
			font-family: OpenSans;
			font-size: 14px;
			font-weight: 400;
			line-height: 22px;


.img_clock
		background url(../images/clock.png) no-repeat left top
		/*background-size 40px*/
.img_hat
		background url(../images/hat.png) no-repeat left top
		/*background-size 40px*/
.img_circle
		background url(../images/circle.png) no-repeat left top
		/*background-size 40px*/
.img_cogwheel
		background url(../images/cogwheel.png) no-repeat left top
		/*background-size 40px*/
.img_rocket
		background url(../images/rocket.png) no-repeat left top
		/*background-size 40px*/
.img_dollar
		background url(../images/dollar.png) no-repeat left top
		/*background-size 40px*/

.b-about-us
	width 100%
	display flex
	flex-flow: row wrap;
	background-color: #ffc155;
	&__side-image
		width: 50%;
		height 50%
		flex-basis 460px
		flex-grow 1

.b-about-us-wrap
	flex-grow 1
	flex-basis 460px
	margin auto
	padding 0 10% 0% 2% 
	&__h2
		text-transform uppercase
		font-weight 900
		font-size 30px
		font-family Gotham
		color white
	&__p
		color white
		font-family OpenSans
		font-size 14px
		font-weight 400
		line-height 24px
		margin-top 1%
		font-weight 700
	&__button
		border: 1px solid #e7ad48;
		border-radius: 2px;
		width: 145px;
		line-height 45px
		margin-top 2%
		text-align center
		
@media (max-width: 1400px) {
	.b-about-us-wrap {
		padding 2%
	}
}

.b-choose-price
	background-color #e7edf3
	max-width: 100%;
	text-align center
	padding 5% 0 5% 0
	&__head
		line-height: 22px;
	&__h1
		color: #394b50;
		font-family: Gotham;
		font-size: 30px;
		text-transform: uppercase;
		font-weight: 900;
	&__p
		color: #75888d;
		font-family: Lato;
		font-size: 18px;
		
.b-price-list
	display flex
	flex-wrap wrap
	text-align center
	padding 2% 10px 0 10px
	text-transform uppercase
	align-items center
	justify-content center
	&__item
		height 410px
		margin-top 10px
		flex-basis 300px;
		max-width 400px;
		flex-grow 1
		background white
		padding 50px 30px
		font-family: Lato;
		border-radius: 3px;
	&__h3
		color: #818b95;
		font-size: 25px;
		font-weight: 100;
		margin-bottom 4%
	&__dollar
		display inline
		font-size: 36px;
		font-weight: 700;
		position relative
		color: #ffbb42;
		top -20px
	&__amount
		display inline
		color: #ffbb42;
		font-size: 60px;
		font-weight: 700;
		line-height 1
	&__per-month
		font-variant: small-caps;
		color: #818b95;
		line-height 1
		font-size 12px
		letter-spacing 1px
		position relative
		top -4px
		margin-bottom 4%
	&__settings
		color: #b5bbc1;
		font-size: 14px;
		border-top 1px solid #b5bbc1
		padding 3%
	&__button 
		width: 131px;
		line-height: 42px;
		margin 0 auto
		margin-top 4%

.b-price-list__item_choosen
	background-color #709dca
	color white
	height 450px
	border-radius 4px
	align-items stretch
	padding 70px 30px
	h3, span, p
		color white
p.b-price-list__item_choosen_settings
		color #c2e1ff
		border-top 1px solid #A1C8EE

@media (max-width: 940px) {
	.b-price-list__item_choosen {
		height 410px
	}
	div.main-logo-pos {
		top -20px
	}
}

.b-how-it-works
	max-width 1300px
	padding 5% 0 5% 0
	margin auto
	text-align center
	color: #394b50;
	&__h2
		font-family: Gotham;
		font-size: 30px;
		font-weight: 900;
		text-transform: uppercase;
		color: #394b50;
	&__p
		font-family: Lato;
		font-size: 18px;
		font-weight: 300;
		color: #394b50;
		
.b-steps
	display flex
	flex-wrap wrap
	text-align center
	justify-content center
	margin-top 4%
	padding-top 10px
	background url(../images/arrow-slice.png) no-repeat 280px 0px,
						 url(../images/arrow-slice.png) no-repeat 900px 0px,
						 url(../images/revert-arrow-slice.png) no-repeat center 140px
	&__item_headphones
		background url(../images/headphones.png) no-repeat top center
	&__item_lock
		background url(../images/lock.png) no-repeat top center
	&__item_cloud
		background url(../images/cloud.png) no-repeat top center
	&__item_thumb
		background url(../images/thumb.png) no-repeat top center
	&__item 
		padding-top 140px
		max-width 230px
		margin 40px
		flex-grow 1
	&__h3
		color: #394b50;
		font-family: Lato;
		font-size: 20px;
		font-weight: 700;
	&__p
		color: #7b7b7b;
		font-family: OpenSans;
		font-size: 14px;
		line-height: 22px;
	&__button
		min-width: 165px;
		line-height: 46px;
		margin 4% 35% 0 35%

@media (max-width: 1320px) {
	.b-steps {
		background transparent
	}
	.b-steps__item {
		margin 20px
		padding-top 110px
	}
}

.b-happy-clients
	background-color: #ffc155; 
	padding 6% 0 6% 0
	text-align center
	&__h2
		color white
		text-transform: uppercase;
		font-size: 30px;
		font-weight: 800;
		letter-spacing 1px
	&__p
		font-family: OpenSans;
		font-size: 18px;
		font-weight: 400;
		color white
		line-height 1.75

.orange-mod
	color: #f6772c
	
.mark-mod-start
	background url(../images/copy-start.png) no-repeat
	width 11px
	height 9px
	position absolute
	top 5px
	left 3px

.mark-mod-end
	background url(../images/copy-end.png) no-repeat
	width 11px
	height 9px
	position relative
	display inline-block
	top 5px
	left 10px
	
.b-clients
	display flex
	flex-wrap wrap
	text-align left
	justify-content center
	margin 0 auto
	max-width 1200px
	padding-top 3%
	&__person
		flex-basis 550px
		background white
		margin 1%
		padding 2%
		border-radius: 2px;
		display flex
		flex-wrap wrap
	&__person-photo
		width: 121px;
		height: 121px;
	&__p
		color: #7b7b7b;
		font-family: OpenSans;
		font-size: 14px;
		line-height: 22px;
		padding 5px 0 0 25px
		position relative
		flex-basis 200px
		flex-grow 1
	&__h4
		width 100%
		color: #93B8C4;
		padding 4% 0 3% 0
		text-transform: uppercase;
		font-family: Lato;
		font-size: 14px;

.b-newsletter
	max-width 1200px
	margin auto
	text-align center
	padding 6% 0 6% 0
	border-bottom 1px solid #e3e7ec
	&__h2
		color: #394b50;
		font: 30px Gotham;
		font-weight 900
		text-transform: uppercase;
	&__p
		font-family: OpenSans;
		font-size: 16px;
		font-weight: 300;
		color: #394b50;

.main_input_mod
	border: 1px solid #cbcbcb;
	max-width 400px;

.main-logo-pos
	position relative
	top -80px

.b-world-map-contacts
	background url(../images/world-map.png) no-repeat center
	background-size contain
	line-height: 24px;
	margin-top 3%
	&__address
		background-color: #394b50;
		background url(../images/address-back.png) no-repeat center
		margin auto
		padding 13% 0 17% 0
	&__h4
		color: white;
		font-family: Lato;
		font-size: 16px;
		line-height: 30px;
	&__p
		color: #aeb7ba;
	&__a
		color: #ffbb42;
		font-family: OpenSans;

.b-footer
	margin auto
	text-align center
	padding-top 2%
	position relative
	&__phone-number
		color: #4F656B;
		font-family: Lato;
		font-size: 30px;
		line-height: 24px;
		margin  15px 0  20px 0
	&__social
		width 20px
		height 20px
		display inline-block

.b-footer__social_twitter
	background url(../images/twitter.png) no-repeat top
.b-footer__social_facebook
	background url(../images/facebook.png) no-repeat top
.b-footer__social_google
	background url(../images/google.png) no-repeat top
.b-footer__social_linkin
	background url(../images/linkin.png) no-repeat top

.b-footer-end 
	position relative
	bottom 0
	width 100%
	background-color: #709dca;
	padding 1.2%
	margin-top 20px
	&_p
		color: white;
		font-family: OpenSans;
		font-size: 14px;
		letter-spacing 1px